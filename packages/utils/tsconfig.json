{
   "compilerOptions": {
      "target": "ES6",
      "module": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true,
      "moduleResolution": "nodenext"
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", "dist"]
}
